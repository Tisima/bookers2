<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
   <div class="col-md-12">
    <h2>User info</h2>
    <tbody>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
   <h4>Name</h4>
   <%= f.text_field :name %>
      <h4>Image</h4>
       <%= f.file_field :profile_image, accept: "image/*" %>
    <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %>
    <% end %>
     </tbody>
      </div>
      </div>
      </div>
